{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Conditions": {
        "AssignEIP2ManagementENI": {
            "Fn::Equals": [
                {
                    "Ref": "ManagementENIEIP"
                },
                "Yes"
            ]
        },
        "UseClientPrivateIP": {
            "Fn::Not": [
                {
                    "Fn::Equals": [
                        {
                            "Ref": "ClientPrivateIP"
                        },
                        ""
                    ]
                }
            ]
        },
        "UseManagementPrivateIP": {
            "Fn::Not": [
                {
                    "Fn::Equals": [
                        {
                            "Ref": "ManagementPrivateIP"
                        },
                        ""
                    ]
                }
            ]
        },
        "UseServerPrivateIP": {
            "Fn::Not": [
                {
                    "Fn::Equals": [
                        {
                            "Ref": "ServerPrivateIP"
                        },
                        ""
                    ]
                }
            ]
        }
    },
    "Mappings": {
        "AWSAMIRegionMap": {
            "AMI": {
                "CITRIXADC": "Citrix ADC VPX"
            },
            "ap-east-1": {
                "CITRIXADC": "ami-0b44e0d299d3b3a33"
