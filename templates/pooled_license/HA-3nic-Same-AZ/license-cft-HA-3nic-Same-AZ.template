      pManagementIP:
        default: Primary Management IP
      pManagementIPSec:
        default: Secondary Management IP
      pManagementSubnet:
        default: Management Subnetwork*
      pClientIP:
        default: Client IP
      pClientSubnet:
        default: Client Subnetwork*
