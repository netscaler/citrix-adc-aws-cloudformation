AWSTemplateFormatVersion: "2010-09-09"
Outputs:
  ApplicationData:
    Value:
      Fn::GetAtt:
        - myWaitCondition
        - Data
    Description: The data passed back as part of signalling the WaitCondition.
  IPAddressNSSec:
    Description:
      Elastic IP address of the Citrix ADC Secondary instance associated
      with Management
    Value:
      Ref: rEipNsipSec
  IPAddressNS:
    Description:
      Elastic IP address of the Citrix ADC Primary instance associated with
      Management
    Value:
      Ref: rEipNsip
  InstanceIdNSSec:
    Description: Instance Id of newly created Secondary Citrix ADC instance
    Value:
      Ref: rVPXInstanceSec
  InstanceIdNS:
    Description: Instance Id of newly created Primary Citrix ADC instance
    Value:
      Ref: rVPXInstance
Conditions:
  cUseCitrixADCImageID: !Not
    - !Equals
      - !Ref pCitrixADCImageID
      - ""
  cManagementIP:
    Fn::Not:
      - Fn::Equals:
          - Ref: pManagementIP
          - ""
  cClientIP:
    Fn::Not:
      - Fn::Equals:
          - Ref: pClientIP
          - ""
  cManagementIPSec:
    Fn::Not:
      - Fn::Equals:
          - Ref: pManagementIPSec
          - ""
  cServerIP:
    Fn::Not:
      - Fn::Equals:
          - Ref: pServerIP
          - ""
Resources:
  rSecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription:
        Enable SSH access via port 22, HTTP with port 80 and HTTPS
        with port 443
      VpcId:
        Ref: pVpcId
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp:
            Ref: pSSHCidrIp
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp:
            Ref: pHTTPCidrIp
        - IpProtocol: tcp
          FromPort: 443
          ToPort: 443
          CidrIp:
            Ref: pHTTPSCidrIp
  rInboundRule:
    Type: AWS::EC2::SecurityGroupIngress
    Properties:
      IpProtocol: tcp
      FromPort: 0
      ToPort: 65535
      SourceSecurityGroupId:
        Fn::GetAtt:
          - rSecurityGroup
          - GroupId
      GroupId:
        Fn::GetAtt:
          - rSecurityGroup
          - GroupId
  rClientENI:
    Type: AWS::EC2::NetworkInterface
    Properties:
      SubnetId:
        Ref: pClientSubnet
      GroupSet:
        - Ref: rSecurityGroup
      Description: ENI connected to client subnet
      PrivateIpAddress:
        Fn::If:
          - cClientIP
          - Ref: pClientIP
          - Ref: AWS::NoValue
  rCitrixNodesInstanceRole:
    Type: AWS::IAM::Role
    Properties:
      Path: "/"
      Policies:
        - PolicyName: Citrixnode
          PolicyDocument:
            Version: "2012-10-17"
            Statement:
              - Action:
                  - ec2:DescribeInstances
                  - ec2:DescribeNetworkInterfaces
                  - ec2:DetachNetworkInterface
                  - ec2:AttachNetworkInterface
                  - ec2:StartInstances
                  - ec2:StopInstances
                  - ec2:RebootInstances
                  - "autoscaling:*"
                  - "sns:*"
                  - "sqs:*"
                  - "iam:SimulatePrincipalPolicy"
                  - "iam:GetRole"
                Resource: "*"
                Effect: Allow
      AssumeRolePolicyDocument:
        Version: "2012-10-17"
        Statement:
          - Action:
              - sts:AssumeRole
            Effect: Allow
            Principal:
              Service:
                - ec2.amazonaws.com
  rCitrixNodesProfile:
    Type: AWS::IAM::InstanceProfile
    Properties:
      Path: "/"
      Roles:
        - Ref: rCitrixNodesInstanceRole
  rEipNsipSec:
    Type: AWS::EC2::EIP
    Properties:
      Domain: vpc
  rServerENI:
    Type: AWS::EC2::NetworkInterface
    Properties:
      SubnetId:
        Ref: pServerSubnet
      GroupSet:
        - Ref: rSecurityGroup
      Description: ENI connected to client subnet
      PrivateIpAddress:
        Fn::If:
          - cServerIP
          - Ref: pServerIP
          - Ref: AWS::NoValue
  rEipNsip:
    Type: AWS::EC2::EIP
    Properties:
      Domain: vpc
  rNsipENISec:
    Type: AWS::EC2::NetworkInterface
    Properties:
      SubnetId:
        Ref: pManagementSubnet
      GroupSet:
        - Ref: rSecurityGroup
      Description: ENI connected to Management subnet
      PrivateIpAddress:
        Fn::If:
          - cManagementIPSec
          - Ref: pManagementIPSec
          - Ref: AWS::NoValue
      SecondaryPrivateIpAddressCount: 1
  rVPXInstance:
    Type: AWS::EC2::Instance
    Properties:
      Tags:
        - Value: NetscalerPrimary
          Key: Name
        - Value:
            Fn::Join:
              - ""
              - - NS_SNS_
                - Fn::Select:
                    - 4
                    - Fn::Split:
                        - ":"
                        - Fn::GetAtt:
                            - rCitrixNodesProfile
                            - Arn
          Key: topic
      UserData:
        Fn::Base64:
          Fn::Join:
            - "\n"
            - - Fn::Join:
                  - ""
                  - - HAPeerIP=
                    - Fn::GetAtt:
                        - rNsipENISec
                        - PrimaryPrivateIpAddress
              - Ref: rMyWaitHandle
      ImageId: !If
        - cUseCitrixADCImageID
        - !Ref pCitrixADCImageID
        - !FindInMap
          - AWSRegionArch2AMI
          - !Ref AWS::Region
          - !FindInMap
            - AWSInstanceType2Arch
            - !Ref pInstanceType
            - Arch
      KeyName:
        Ref: pKeyName
      Tenancy:
        Ref: pTenancyType
      IamInstanceProfile:
        Ref: rCitrixNodesProfile
      InstanceType:
        Ref: pInstanceType
      NetworkInterfaces:
        - DeviceIndex: 0
          NetworkInterfaceId:
            Ref: rNsipENI
        - DeviceIndex: 1
          NetworkInterfaceId:
            Ref: rClientENI
        - DeviceIndex: 2
          NetworkInterfaceId:
            Ref: rServerENI
  rNsipENI:
    Type: AWS::EC2::NetworkInterface
    Properties:
      SubnetId:
        Ref: pManagementSubnet
      GroupSet:
        - Ref: rSecurityGroup
      Description: ENI connected to Management subnet
      PrivateIpAddress:
        Fn::If:
          - cManagementIP
          - Ref: pManagementIP
          - Ref: AWS::NoValue
      SecondaryPrivateIpAddressCount: 1
  rAssociateEipNsip:
    Type: AWS::EC2::EIPAssociation
    Properties:
      NetworkInterfaceId:
        Ref: rNsipENI
      AllocationId:
        Fn::GetAtt:
          - rEipNsip
          - AllocationId
  rMyWaitHandle:
    Type: AWS::CloudFormation::WaitConditionHandle
    Properties: {}
  myWaitCondition:
    Type: AWS::CloudFormation::WaitCondition
    DependsOn: rVPXInstance
    Properties:
      Count: 0
      Handle:
        Ref: rMyWaitHandle
      Timeout: 60
  rVPXInstanceSec:
    DependsOn: myWaitCondition
    Type: AWS::EC2::Instance
    Properties:
      Tags:
        - Value: NetscalerSecondary
          Key: Name
        - Value:
            Fn::Join:
              - ""
              - - NS_SNS_
                - Fn::Select:
                    - 4
                    - Fn::Split:
                        - ":"
                        - Fn::GetAtt:
                            - rCitrixNodesProfile
                            - Arn
          Key: topic
      UserData:
        Fn::Base64:
          Fn::Join:
            - "\n"
            - - Fn::Join:
                  - ""
                  - - HAPeerIP=
                    - Fn::GetAtt:
                        - rNsipENI
                        - PrimaryPrivateIpAddress
              - Fn::Join:
                  - ""
                  - - HAPeerInstanceId=
                    - Ref: rVPXInstance
              - Ref: rMyWaitHandle
      ImageId: !If
        - cUseCitrixADCImageID
        - !Ref pCitrixADCImageID
        - !FindInMap
          - AWSRegionArch2AMI
          - !Ref AWS::Region
          - !FindInMap
            - AWSInstanceType2Arch
            - !Ref pInstanceType
            - Arch
      KeyName:
        Ref: pKeyName
      Tenancy:
        Ref: pTenancyType
      IamInstanceProfile:
        Ref: rCitrixNodesProfile
      InstanceType:
        Ref: pInstanceType
      NetworkInterfaces:
        - DeviceIndex: 0
          NetworkInterfaceId:
            Ref: rNsipENISec
  rAssociateEipNsipSec:
    Type: AWS::EC2::EIPAssociation
    Properties:
      NetworkInterfaceId:
        Ref: rNsipENISec
      AllocationId:
        Fn::GetAtt:
          - rEipNsipSec
          - AllocationId

  rLambdaExecutionRole:
    Type: AWS::IAM::Role
    Properties:
      AssumeRolePolicyDocument:
        Version: 2012-10-17
        Statement:
          - Effect: Allow
            Principal:
              Service:
                - lambda.amazonaws.com
            Action:
              - sts:AssumeRole
      Policies:
        - PolicyName: LambdaLog2CloudWatch
          PolicyDocument:
            Version: 2012-10-17
            Statement:
              - Effect: Allow
                Action:
                  - "logs:CreateLogGroup"
                  - "logs:CreateLogStream"
                  - "logs:PutLogEvents"
                  - "logs:CreateExportTask"
                  - "logs:DescribeExportTask"
                Resource: "arn:aws:logs:*:*:*"
        - PolicyName: LambdaAllowAllEC2
          PolicyDocument:
            Version: 2012-10-17
            Statement:
              - Action:
                  - "ec2:*"
                Resource: "*"
                Effect: Allow
              # - Action: "iam:PassRole"
              #   Effect: "Allow"
              #   Resource: "*"

  rLambdaHAAcrossAZLicenseFunction:
    Type: AWS::Lambda::Function
    Properties:
      Code:
        S3Bucket: !Join
          - ""
          - - ns-vpx-cft-fn-
            - !Ref AWS::Region
        S3Key: license-lambda-HA-3nic-Same-AZ.zip
      Handler: license-lambda-HA-3nic-Same-AZ.lambda_handler
      Runtime: python3.6
      Timeout: 900
      Role: !GetAtt rLambdaExecutionRole.Arn
  rConfigureLambda:
    Type: Custom::LambdaHAAcrossAZLicense
    DependsOn:
      - rVPXInstanceSec
      - myWaitCondition
    Properties:
      ServiceToken: !GetAtt rLambdaHAAcrossAZLicenseFunction.Arn
      PriInstanceID: !Ref rVPXInstance
      PriPubNSIP: !Ref rEipNsip
      # PriNSIP: !GetAtt rPriNsipENI.PrimaryPrivateIpAddress
      # PriVIP: !GetAtt rPriClientENI.PrimaryPrivateIpAddress
      # PriVIPSubnet: !Ref pPriClientSubnet
      SecInstanceID: !Ref rVPXInstanceSec
      SecPubNSIP: !Ref rEipNsipSec
      # SecNSIP: !GetAtt rSecNsipENI.PrimaryPrivateIpAddress
      # SecVIP: !GetAtt rSecClientENI.PrimaryPrivateIpAddress
      ADMIP: !Ref pADMIP
      LicensingMode: !Ref pLicensingMode
      Bandwidth: !Ref pBandwidth
      PooledEdition: !Ref pPooledEdition
      Platform: !Ref pPlatform
      vCPUEdition: !Ref pVCPUEdition

